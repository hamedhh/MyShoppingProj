@model IEnumerable<DataLayer.Products>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="last-products">
    @if (Model.Count() > 0)
    {
        <header><h3> تعداد @Model.Count()  محصول با عنوان "@ViewBag.SearchText" یافت شد</h3></header>
    }
    else
    {
        <div class="alert alert-danger">
            <header><h3>محصولی با عنوان "@ViewBag.SearchText" یافت نشد!</h3></header>
        </div>
    }
    <article>

        @foreach (var item in Model)
        {
            @Html.Partial("_Product", item)
        }

        <div class="clearfix"></div>
    </article>
</section>

