@model IEnumerable<DataLayer.Product_Groups>
<section class="border-radius category-side">
    <header><h3>دسته بندی ها</h3></header>
    <article>
        <ul class="category-menu">
            @foreach (var item in Model.Where(a=>a.ParentID==null))
            {
                <li>
                    <h2>@item.GroupTitle</h2>
                    @if(Model.Any(a=>a.ParentID==item.GroupID))
                        {
                        <ul class="child-category-menu">
                            @foreach (var subItem in Model.Where(a=>a.ParentID==item.GroupID))
                            {
                                <li>
                                    <h2><a href="#">@subItem.GroupTitle <span>(0)</span> </a> </h2>
                                </li>
                            }
                        </ul>

                    }
                </li>
            }
        </ul>
    </article>

</section>

