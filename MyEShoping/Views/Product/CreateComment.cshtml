@model DataLayer.Product_Comments
@using (Ajax.BeginForm("CreateComment", "Product", FormMethod.Post, new AjaxOptions()
{
    OnSuccess = "CreateSuccess",
    UpdateTargetId = "ListComment"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.ProductID)
    @Html.HiddenFor(model=>model.ParentID)
    <div class="col-md-5">
        <div class="form-group">
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "نام و نام خانوادگی" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            @*<input class="form-control" placeholder="نام و نام خانوادگی" type="text">*@
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "ایمیل" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            @*<input class="form-control" placeholder="ایمیل" type="text">*@
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.WebSite, new { @class = "form-control", placeholder = "وب سایت" })
            @*<input class="form-control" placeholder="وب سایت" type="text">*@
        </div>
    </div>
    <div class="col-md-7">
        @Html.TextAreaFor(model => model.Commnet, new { @class = "form-control", placeholder = "متن دیدگاه" })
        @Html.ValidationMessageFor(model => model.Commnet, "", new { @class = "text-danger" })
        @*<textarea class="form-control" placeholder="متن دیدگاه"></textarea>*@
        <input class="btn btn-primary" value="ثبت دیدگاه" type="submit">
    </div>
    <div class="clearfix"></div>
}


